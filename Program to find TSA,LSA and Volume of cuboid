#include<iostream>
using namespace std;
int main(){
	while(true){
	 cout<<"1.TSA of cuboid\n2.LSA of cuboid\n3.Volume of cuboid\n4.exit\n";  
	int l,b,h,n;
	cout<<"choose option :- \n";
	cin>>n;
	  if(n==4){
	 cout<<"Thank you";
	    break;
     }
	cout<<"enter the length of rectangle :";
	cin>>l;
	cout<<"enter the breadth of rectangle :";
	cin>>b;
	cout<<"enter the height of rectangle :";
	cin>>h;
   
	 if(n==1){
	    int t = 2*(l*b+b*h+h*l);
	    cout<<"TSA of cuboid is :-"<<t<<"cm^2"<<endl;
	}
	else if(n==2){
	    int c = 2*(l+b)*h;
	    cout<<"LSA of cuboid is :"<<c<<"cm^2"<<endl;
	    }
	
	else if(n==3){
	    int v = l*b*h;
	    cout<<"volume of cuboid is :"<<v<<"cm^3"<<endl;
	    }
	
	}
	
	
}
